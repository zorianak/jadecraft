extends layout

block content
  h1 #{theChar.name}
  
  div#char-summary
    input#ifTp(type="checkbox")
    label#tpLabel(for="ifTp") Activate Tiger Power
    
    input#fightLength(type="number")
    label#fightLenLable(for="fightLength",value="6") Fight Length (minutes)

    table#char-basics-table
        th#charName
        tr
            td.attrName Realm
            td#realm.attrStat #{theChar.realm}

    table#char-stat-table
        tr
            td.attrName Agility
            td#Agility.attrStat #{theChar.Agility}
        tr
            td.attrName Strength
            td#Strength.attrStat #{theChar.Strength}
        tr
            td.attrName AP
            td#AP.attrStat #{theChar.AP}
        tr
            td.attrName Crit
            td#Crit.attrStat #{theChar.Crit}
        tr
            td.attrName Mastery
            td#Mastery.attrStat #{theChar.Mastery}
        tr
            td.attrName Haste
            td#Haste.attrStat #{theChar.Haste}
        tr
            td.attrName VersRating
            td#VersRating.attrStat #{theChar.VersRating}
        tr
            td.attrName Mainhand DPS
            td#VersRating.attrStat #{theChar.Mainhand.weaponInfo.dps}
        tr
            td.attrName Offhand DPS
            td#VersRating.attrStat #{theChar.Offhand.weaponInfo.dps}
            
  script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
  script(src='/javascripts/vendor/require.js')
  script(src='/javascripts/stats/avgWdps.js')
  script(src='/javascripts/stats/stat.js')
  script(src='/javascripts/char-import.js')
  script(src='/javascripts/char.js')
  script(src='/javascripts/global.js')
  
  script(src='/javascripts/spells/spell.js')
  script(src='/javascripts/spells/spellList.js')
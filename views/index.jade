extends layout

block content
  h1= title
  p Welcome to #{title}
  div#char-import
    form#charForm(action="/chars", method="post",enctype="application/x-www-form-urlencoded") Character Form
      fieldset
        select#charRegion(type="text",name="charRegion")
          option(value='us') US
          option(value='eu') EU
        label#charRegionLabel(for="charRegion") Character Region
        br

        input#charName(type="text",name="charName",placeholder="Your Character Name")
        label#charNameLabel(for="charName") Character Name
        br

        input#charRealm(type="text",name="charRealm",placeholder="Your Character's Realm")
        label#charRealmLabel(for="charRealm") Character Realm
        br

        input#submitButton(type="submit", value="Submit!")
